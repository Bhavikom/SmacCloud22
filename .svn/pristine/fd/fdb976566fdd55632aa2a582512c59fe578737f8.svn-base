<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/popup_dialog_background"
              android:orientation="vertical"
              android:padding="@dimen/padding_very_small">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back_small"/>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_3dp"
            android:gravity="left|center_vertical"
            android:text="Choose"
            android:textColor="@color/white"
            android:textSize="@dimen/title_small"
            android:textStyle="bold"/>
    </LinearLayout>


    <ListView
        android:id="@+id/list_search_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_3dp"
        android:layout_marginTop="@dimen/padding_very_small"
        android:divider="@color/transparent"
        android:dividerHeight="@dimen/padding_3dp">

    </ListView>
</LinearLayout>