<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/counterPanel"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/counterValuePanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/counterBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_notify"/>

        <!--<de.smac.smaccloud.widgets.CircularTextView-->
        <TextView
            android:id="@+id/txtCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/counterBackground"
            android:background="@drawable/circle_count_background_red"
            android:gravity="center"
            android:padding="@dimen/padding_1dp"
            android:text="10"
            android:textColor="@color/white"
            android:textSize="@dimen/title_ultra_small"/>
    </RelativeLayout>

</FrameLayout>